<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="48sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@id/tvTimer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_below="@id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:enabled="false" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_below="@id/btnStop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:enabled="false" />

    <Button
        android:id="@+id/btnLap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lap"
        android:layout_below="@id/btnReset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:enabled="false" />

    <Button
        android:id="@+id/btnCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Соревнование"
        android:layout_below="@id/btnLap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:enabled="false" />

    <LinearLayout
        android:id="@+id/lapContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btnCompetition"
        android:layout_marginTop="20dp"
        android:padding="20dp" />

    <LinearLayout
        android:id="@+id/participantContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/lapContainer"
        android:layout_marginTop="20dp"
        android:padding="20dp" />

</RelativeLayout>